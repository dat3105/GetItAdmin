<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.AddBrandLapActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_addNewBrand"
            android:background="@drawable/toolbar_shape"
            app:navigationIcon="@drawable/icon_back"
            app:title="THÊM MỚI LOẠI"
            app:titleTextColor="@color/mainColor"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/et_addBrandScreen"
            android:layout_margin="15dp"
            android:background="@drawable/edittext_shape"
            android:hint="Tên loại"
            android:padding="10dp"
            android:fontFamily="@font/robotoregular"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btn_addImageBrand"
            android:layout_margin="15dp"
            android:background="@drawable/button_menu_shape"
            android:drawableTop="@drawable/icon_cam"
            android:paddingTop="5dp"
            android:text="Thêm hình ảnh"
            android:textSize="12sp"
            android:textColor="@color/mainColor"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imv_avaLap_addBrandScreen"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btn_confirm_addBrandScreen"
            android:layout_margin="15dp"
            android:background="@drawable/button_maincolor_shape"
            android:paddingTop="5dp"
            android:text="Nhập hàng"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>