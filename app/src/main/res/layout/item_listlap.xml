<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nameLap_itemListLap"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotolight"
            android:hint="Tên laptop"/>
        <TextView
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_priceLap_itemListLap"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotolight"
            android:hint="Đơn giá"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_quantity_itemListLap"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:fontFamily="@font/robotolight"
                android:layout_toLeftOf="@+id/imv_dropdown"
                android:layout_marginRight="40dp"
                android:text="Số lượng"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_dropdown"
                android:layout_alignParentRight="true"
                android:id="@+id/imv_dropdown"
                />
        </LinearLayout>
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="5dp"
    android:background="@color/blurblack"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:visibility="gone"
        android:id="@+id/linear_option_itemListLap"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="17dp"
            android:background="#80EAE8E8">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/imv_logo_changLang_2020"
                android:layout_centerVertical="true"
                android:src="@drawable/icon"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_metphone_changLang_2020"
                android:layout_toRightOf="@+id/imv_logo_changLang_2020"
                android:text="GETIT ADMIN"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_switchLang_2020"
                android:layout_toRightOf="@+id/imv_logo_changLang_2020"
                android:layout_below="@+id/tv_metphone_changLang_2020"
                android:text="Lựa chọn chức năng"
                android:textColor="@color/blurblack"
                android:textSize="15dp"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="21dp"
            android:paddingBottom="26dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_update_itemListLap"
                android:drawableTop="@drawable/updateic"
                android:text="Sửa"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_delete_itemListLap"
                android:layout_weight="1"
                android:drawableTop="@drawable/delete"
                android:text="Xóa"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
<!-- option part   -->
</LinearLayout>